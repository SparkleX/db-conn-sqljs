{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
		"outDir": "dist",
		"noImplicitAny": true,
		"declaration": true,
		"sourceMap": true,
		"strict": true,
		"strictPropertyInitialization": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true
    },
    "include": [
		"src/**/*"
    ],
    "exclude": [
		"node_modules",
        "**/*.spec.ts"
    ]
}